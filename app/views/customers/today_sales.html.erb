<h1>Listing customers</h1>


<%= form_tag customers_path, :method => 'get' do %>
  <p>
  	<%= label_tag "search", "Enter serach query:"%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Delivery Status</th>
      <th>Phone</th>
      <th>Delivery date</th>
      <th>Work</th>
      <th>Mobile</th>
      <th>Address</th>
      <th>Request date</th>
      <th>Cash</th>
      <th>Paid</th>
      <th>Remained</th>
      <th>Doctor</th>
      <th>Req store</th>
      <th>Comment</th>
      <th>Frame Kind</th>
      <th>Made In</th>
      <th>Original Price</th>
    </tr>
  </thead>

  <tbody>
    <% [@customers, @glasses].each do |customer,glass| %>
      <tr>
        <td><%= customer.name %></td>
        <%if customer.delivered%>
        <td>Yes</td>
        <%else%>
        <td>No</td>
        <%end%>
        <td><%= customer.phone %></td>
        <td><%= customer.delivery_date %></td>
        <td><%= customer.work %></td>
        <td><%= customer.mobile %></td>
        <td><%= customer.address %></td>
        <td><%= customer.request_date %></td>
        <td><%= customer.cash %></td>
        <td><%= customer.paid %></td>
        <td><%= customer.remained %></td>
        <td><%= customer.doctor %></td>
        <td><%= customer.req_store %></td>
        <td><%= customer.comment %></td>
        <td><%= glass.frame_kind %></td>
        <td><%= glass.made_in %></td>
        <td><%= glass.unity_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
<%= link_to 'Home Page', page_home_path %>
<%= link_to 'add new glass', customers_select_glass_path%>
